<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="418.0" prefWidth="584.0"
            xmlns="http://javafx.com/javafx/8.0.171" fx:controller="edu.zju.gis.sdch.ui.DocManage">
    <right>
        <VBox prefHeight="339.0" prefWidth="116.0" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnSelectDoc" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="查询">
                    <VBox.margin>
                        <Insets left="5.0" top="30.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="btnAddDoc" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="增加">
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="btnDeleteDoc" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="删除">
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="btnConfirmDeleteDocs" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0"
                        text="确认删除">
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="btnModifyDoc" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="编辑">
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="btnStartModifiedDocs" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0"
                        text="开始编辑">
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="btnTest" mnemonicParsing="false" text="测试"/>
            </children>
            <BorderPane.margin>
                <Insets left="10.0"/>
            </BorderPane.margin>
        </VBox>
    </right>
    <center>
        <TableView fx:id="tvDocs" editable="true" prefHeight="339.0" prefWidth="411.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn prefWidth="75.0" text="C1"/>
                <TableColumn prefWidth="75.0" text="C2"/>
            </columns>
        </TableView>
    </center>
    <left>
        <VBox prefHeight="362.0" prefWidth="41.0" BorderPane.alignment="CENTER"/>
    </left>
    <top>
        <HBox prefHeight="43.0" prefWidth="584.0" spacing="20.0" style="-fx-background-color: lightblue;"
              BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="5.0"/>
            </BorderPane.margin>
            <children>
                <TextField fx:id="tfWord">
                    <HBox.margin>
                        <Insets top="10.0"/>
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
    </top>
    <bottom>
        <HBox prefHeight="26.0" prefWidth="584.0" BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
