<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="561.0" prefWidth="664.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.zju.gis.sdch.ui.MainPage">
    <top>
        <HBox focusTraversable="true" nodeOrientation="LEFT_TO_RIGHT" prefHeight="39.0" prefWidth="545.0" spacing="15.0"
              BorderPane.alignment="TOP_RIGHT">
            <children>
                <TextField fx:id="tfChooseFile" prefHeight="23.0" prefWidth="136.0" promptText="请选择文件"/>
                <Label text="分类体系">
                    <opaqueInsets>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </opaqueInsets>
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                </Label>
                <ChoiceBox fx:id="cbCategory" prefHeight="23.0" prefWidth="117.0" value=""/>
                <Label text="选择图层">
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                </Label>
                <ChoiceBox fx:id="cbxLayers" prefHeight="23.0" prefWidth="122.0" value=""/>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <BorderPane.margin>
                <Insets top="20.0"/>
            </BorderPane.margin>
            <padding>
                <Insets left="30.0"/>
            </padding>
        </HBox>
    </top>
    <bottom>
        <HBox prefHeight="23.0" prefWidth="566.0" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="选择唯一标识字段">
                    <padding>
                        <Insets left="20.0" top="3.0"/>
                    </padding>
                    <opaqueInsets>
                        <Insets top="20.0"/>
                    </opaqueInsets>
                </Label>
                <ChoiceBox fx:id="cbUuidField" prefHeight="13.0" prefWidth="117.0" value="选择唯一标识字段"/>
                <!--<Label layoutX="430.0" layoutY="53.0" text="索引名称" />-->
                <!--<TextField layoutX="491.0" layoutY="49.0" prefHeight="23.0" prefWidth="76.0" />-->
                <RadioButton fx:id="rbSkipEmpty" mnemonicParsing="false" text="是否跳过空间范围为空的纪录">
                    <padding>
                        <Insets left="10.0" top="3.0"/>
                    </padding>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </RadioButton>
                <Button fx:id="btnPreview" alignment="BASELINE_LEFT" mnemonicParsing="false" prefHeight="30.0"
                        prefWidth="84.0" text="数据预览"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" top="10.0"/>
            </padding>
        </HBox>
    </bottom>
    <center>

        <TableView fx:id="tableView" editable="true" prefHeight="452.0" prefWidth="593.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="tcFieldName" prefWidth="75.0" text="字段名"/>
                <TableColumn fx:id="tcTargetName" prefWidth="75.0" text="映射名"/>
                <TableColumn fx:id="tcFieldType" prefWidth="75.0" text="字段类型"/>
                <TableColumn fx:id="tcUsed" prefWidth="75.0" text="是否选用"/>
                <TableColumn fx:id="tcAnalyzable" prefWidth="75.0" text="是否模糊匹配"/>
                <TableColumn fx:id="tcBoost" prefWidth="75.0" text="权重"/>
                <TableColumn fx:id="tcDescription" prefWidth="75.0" text="描述"/>
            </columns>
        </TableView>
    </center>
    <left>
        <VBox prefHeight="249.0" prefWidth="32.0" BorderPane.alignment="CENTER"/>
    </left>
    <right>
        <VBox prefHeight="452.0" prefWidth="31.0" BorderPane.alignment="CENTER"/>
    </right>
</BorderPane>
